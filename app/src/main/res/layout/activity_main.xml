<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:theme="@style/AppTheme.AppBarOverlay" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal">

                <com.awlsoft.asset.ui.widget.DrawableCenterTextView
                    android:id="@+id/add_asset"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/grid_item_bg"
                    android:clickable="true"
                    android:drawablePadding="0dp"
                    android:drawableTop="@drawable/ic_add_asset"
                    android:gravity="center_horizontal"
                    android:text="新增" />

                <com.awlsoft.asset.ui.widget.DrawableCenterTextView
                    android:id="@+id/find_asset"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/grid_item_bg"
                    android:drawableTop="@drawable/ic_find"
                    android:gravity="center_horizontal"
                    android:text="查找" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal">

                <com.awlsoft.asset.ui.widget.DrawableCenterTextView
                    android:id="@+id/inventory_asset"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/grid_item_bg"
                    android:drawableTop="@drawable/ic_inventory"
                    android:gravity="center_horizontal"
                    android:text="盘点" />

                <com.awlsoft.asset.ui.widget.DrawableCenterTextView
                    android:id="@+id/my_asset"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/grid_item_bg"
                    android:drawableTop="@drawable/ic_my"
                    android:gravity="center_horizontal"
                    android:text="我的任务" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal">

                <com.awlsoft.asset.ui.widget.DrawableCenterTextView
                    android:id="@+id/sync_asset"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/grid_item_bg"
                    android:drawableTop="@drawable/ic_sync"
                    android:gravity="center_horizontal"
                    android:text="数据同步" />

                <com.awlsoft.asset.ui.widget.DrawableCenterTextView
                    android:id="@+id/settings_asset"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/grid_item_bg"
                    android:drawableTop="@drawable/ic_settings"
                    android:gravity="center_horizontal"
                    android:text="设置" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>